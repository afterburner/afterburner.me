<% @title = @profile_user.github_login %>
<div class="page-header">
  <h1>
    <img alt="Profile Avatar" class="img-circle" style="width: 1.5em" src="<%=
    if @profile_user_github && @profile_user_github.has_key?("avatar_url")
      @profile_user_github["avatar_url"]
    else
      "http://placehold.it/300&text=%20"
    end %>">
    <%= @profile_user.github_login %>
    <% if @profile_user.type == :mentor %>
      <a href="#" data-toggle="tooltip" title="This user is a mentor." data-placement="right"><small><span class="glyphicons star"></span></small></a>
    <% end %>
    <% if @profile_user.type == :admin %>
      <a href="#" data-toggle="tooltip" title="This user is an admin." data-placement="right"><small><span class="ion ion-jet" style="transform: rotate(40deg) translateY(-2px); -webkit-transform: rotate(40deg) translateY(-2px); -ms-transform: rotate(40deg) translateY(-2px)"></span></small></a>
    <% end %>
  </h1>
</div>

<% if flash[:error] %>
  <div class="alert alert-danger" role="alert"><%= flash[:error] %></div>
<% end %>
<% if flash[:message] %>
  <div class="alert alert-success" role="alert"><%= flash[:message] %></div>
<% end %>

<h3>Medals</h3>
<p class="lead">Win medals by accomplishing tasks and meeting milestones. Each medal you win gets you closer to the top of the leaderboard.</p>
<div class="row">
  <div class="col-sm-8">
    <ul class="clearfix" style="padding: 0; list-style: none">
    <% for m in Afterburner::Medal.awarded_to(@profile_user) do %>
      <% secret = (m[:medal].secret == true && m[:count] == 0) %>
      <li data-toggle="tooltip" title="<%= secret ? "Shh. This medal is secret. You'll just have to work hard and keep your fingers crossed." : m[:medal].description %>" style="min-width: 22%; margin-right: 3px; margin-bottom: 3px; float: left; text-align: center; background-color: #f9f9f9; min-height: 120px; padding: 20px; position: relative">
        <% if m[:count] > 0 %>
          <span class="badge" style="position: absolute; right: 20px; top: 20px;">&#215;<%= m[:count].to_s %></span>
        <% end %>
        <span class="icon ion-ribbon-a" style="font-size: 250%;
          <%= if m[:count] == 0
            "color: \#ddd"
          end %>">
        </span>
        <div style="<%= secret ? "color: \#ddd" : "" %>">
          <% if secret %>
            ...
          <% else %>
            <%= m[:medal].name %>
          <% end %><br/>
          <%= m[:medal].points.to_s %> pts
          </div>
      </li>
    <% end %>
    </ul>
  </div>
  <div class="col-sm-4">
    <div class="visible-sm-block visible-md-block visible-lg-block pull-left" style="border-left: 1px solid #ddd; height: 120px; margin-right: 10px"></div>
    <div class="visible-xs-block" style="border-top: 1px solid #ddd; height: 1px; margin-bottom: 10px"></div>
    <span class="h1"><%= @profile_user.points %><br/></span>
    <span class="h2" style="line-height: .5em"><small>points</small></span>
  </div>
</div>

<% grant_permission = @user && (@user.has_permission?("permissions_grant"))  %>
<% edit_permission = @user && (grant_permission || @user.github_login == @profile_user.github_login || @user.has_permission?("users_update")) %>
<% view_permission = @user && (edit_permission || @user.type == :mentor) %>

<% if view_permission %>
<div class="panel panel-default" style="margin-top: 2em">
  <div class="panel-heading">
    <h3 class="panel-title">Private Profile</h3>
    <small>Visible only by Afterburner admins and mentors.</small>
  </div>
  <div class="panel-body">
    <form role="form" method="POST" action="/profile/<%= @profile_user.github_login %>">
      <div class="form-group <%= "has-error" if form.failed_on?(:name) %>">
        <label for="name">Name</label>
        <% if edit_permission %>
          <input class="form-control" id="name" name="name" placeholder="Name" value="<%= @profile_user.name %>" type="text">
        <% else %>
          <input class="form-control" value="<%= @profile_user.name %>" disabled="disabled" type="text">
        <% end%>
      </div>
      <div class="form-group <%= "has-error" if form.failed_on?(:email) %>">
        <label for="email">Email</label>
        <% if edit_permission %>
          <input class="form-control" id="email" name="email" placeholder="Email" value="<%= @profile_user.email %>" type="email">
        <% else %>
          <input class="form-control" value="<%= @profile_user.email %>" disabled="disabled" type="email">
        <% end%>
      </div>
      <div class="form-group <%= "has-error" if form.failed_on?(:t_shirt_size) %>">
        <label for="t_shirt_size">T-Shirt Size</label>
        <% if edit_permission %>
          <% ["S", "M", "L" ,"XL", "XXL"].each do |size| %>
            <div class="radio">
              <label><input type="radio" name="t_shirt_size" id="t_shirt_size" value="<%= size %>" <%= "checked" if @profile_user.t_shirt_size == size %>/>&nbsp;<%= size %></label>
            </div>
          <% end %>
        <% else %>
          <label><%= @profile_user.t_shirt_size %></label>
        <% end %>
      </div>
      <% if @user.has_permission?("permissions_grant") %>
        <div class="form-group <%= "has-error" if form.failed_on?(:type) %>">
          <label for="type">Type</label>
          <div class="radio">
            <label><input type="radio" name="type" id="type" value="cadet" <%= "checked=\"checked\"" if @profile_user.type == :cadet %>> Cadet</label>
          </div>
          <div class="radio">
            <label><input type="radio" name="type" id="type" value="mentor" <%= "checked=\"checked\"" if @profile_user.type == :mentor %>> Mentor</label>
          </div>
          <div class="radio">
            <label><input type="radio" name="type" id="type" value="admin" <%= "checked=\"checked\"" if @profile_user.type == :admin %>> Admin</label>
          </div>
        </div>
        <div class="form-group <%= "has-error" if form.failed_on?(:permissions) %>">
          <label for="permissions">Manage Permissions</label>
          <% for perm in @permissions do %>
            <div class="checkbox">
              <label><input type="checkbox" name="permissions[]" id="permissions[]" value="<%= perm.slug %>" <%= "checked=\"checked\"" if @profile_user.has_permission?(perm.slug) %>> <%= perm.name %></label>
            </div>
          <% end %>
        </div>
      <% end %>

      <% if edit_permission %>
        <button type="submit" class="btn btn-primary">Update Profile</button>
      <% end %>
    </form>
  </div>
</div>
<% end %>
